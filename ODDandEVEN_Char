--FIND OUT THE ODD AND EVEN LETTER'S FROM THE STRING......

DECLARE @STR VARCHAR(30)
SET @STR='HELLO WORLD'

;WITH CTE AS
(
SELECT SUBSTRING(@STR,0,1) STRING ,0 AS POS

UNION ALL

SELECT 
CASE WHEN POS=0 THEN SUBSTRING(@STR,POS+1,1) 
ELSE
SUBSTRING(@STR,POS,1) END STRING 
,POS+1 POS
FROM CTE 
WHERE POS<=LEN(@STR)

)

SELECT * FROM CTE WHERE 
POS>=1 AND POS%2=0
